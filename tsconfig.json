{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "isolatedModules": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "/client/*": ["client/*"],
      "/server/*": ["server/*"],
      "/shared/*": ["shared/*"]
    }
  },
  "compileOnSave": false,
  "filesGlob": [
    "client/**/*.ts",
    "server/**/*.ts",
    "shared/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
