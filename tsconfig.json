{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "/shared/*": ["shared/*"]
    },
    "typeRoots": [
      "node_modules/@types/",
      "typings/"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ]
}
